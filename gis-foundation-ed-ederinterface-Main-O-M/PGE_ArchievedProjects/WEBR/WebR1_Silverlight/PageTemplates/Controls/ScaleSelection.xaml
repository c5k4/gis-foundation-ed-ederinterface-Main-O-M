<controls:ChildWindow x:Class="PageTemplates.ScaleSelection"	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
			Width="460" Height="160"
			Title="Template Scale Selection"
			VerticalAlignment="Center"
			HorizontalAlignment="Center"
			HasCloseButton="True">
	<Grid x:Name="LayoutRoot" Background="White">
		<StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="430">
			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Select A Scale" VerticalAlignment="Top" Margin="10,10,0,10"/>
            <ComboBox x:Name="comboScaleSelection" Width="175" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="ApplyScaleButton" IsEnabled="False" Content="Apply" Click="ApplyScaleButton_Click" Width="100" Height="24" Margin="0" Grid.Row="1"/>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="24"  Margin="10,0,0,0" Grid.Row="1" />
            </StackPanel>
        </StackPanel>        
	</Grid>
</controls:ChildWindow>
