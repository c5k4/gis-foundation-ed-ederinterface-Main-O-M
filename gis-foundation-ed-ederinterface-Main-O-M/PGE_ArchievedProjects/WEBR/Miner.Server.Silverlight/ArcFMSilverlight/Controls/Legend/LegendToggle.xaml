<UserControl x:Class="ArcFMSilverlight.LegendToggle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:valueConverters="clr-namespace:ArcFMSilverlight.ValueConverters"
    mc:Ignorable="d"
    >
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
            <StackPanel Orientation="Horizontal" Margin="0">
                <ToggleButton Name="LegendToggleButton" IsEnabled="False"
                      Margin="0"
                      Padding="0"
                    Checked="LegendToggleButton_OnChecked"
                    Unchecked="LegendToggleButton_OnChecked"
                      Style="{StaticResource RibbonToggleButton}"
                      ToolTipService.ToolTip="Show Legend" >
                    <Image x:Name="ImageSource11" Width="16"
                   Height="16"
                   Source="/Images/show_legend.png" />
                </ToggleButton>
            </StackPanel>

    </Grid>
</UserControl>
