            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" x:Name="AllComponentsStackPanel_">
            <StackPanel Orientation="Vertical" x:Name="AllComponentsStackPanel">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Environmental Report" FontWeight="ExtraBold" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8 0 4 0" Opacity="1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" >
                        
                        <TextBlock Text="Latitude:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="Longitude:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="Elevation:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        
                        <HyperlinkButton FontWeight="Bold" Name="FAAUrl" TargetName="_blank" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1" NavigateUri="">
                            <TextBlock TextDecorations="Underline" ><Span FontWeight="Bold">FAA Notice Criteria Webpage</Span></TextBlock>
                        </HyperlinkButton>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        
                        <TextBlock Text="{Binding Path=Latitude, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="{Binding Path=Longitude, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="{Binding Path=Elevation, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                           </StackPanel>
                </StackPanel>
                <Border BorderBrush="LightSlateGray" BorderThickness="0 2 0 2">
                    <Border.Background>
                        <SolidColorBrush Color="#EFEFEF"></SolidColorBrush>
                    </Border.Background>
                </Border>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" >
                        <TextBlock Text="City:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="Districts:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="Division:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="County:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <TextBlock Text="{Binding Path=City, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="{Binding Path=Districts, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="{Binding Path=Division, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                        <TextBlock Text="{Binding Path=Country, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>

                    </StackPanel>
               
            </StackPanel>
                <Border BorderBrush="LightSlateGray" BorderThickness="0 2 0 2">
                    <Border.Background>
                        <SolidColorBrush Color="#EFEFEF"></SolidColorBrush>
                    </Border.Background>
                    <StackPanel Orientation="Horizontal" x:Name="LoadingAndGenerationStackPanel">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Corrosion Area:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Inside Raptor Concentration Zone (RCZ)?:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Fire Area Designation:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="PGE Wildland Fire Management Area:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Historical Peak Wind:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Summer Temperature District:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8 0 4 0" Opacity="1"/>
                       
                            <TextBlock Text="Snow Loading Area:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Climate Zone Code:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Fire Index Area:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Fire Index Control Centers:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="High Fire Threat District:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Surge Protection Districts:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Primary Voltage Area:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="Insulation Areas:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                          
                           
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Path=CorrosionArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=RCZ, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=FireArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=WildLandFire, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            
                            <TextBlock Text="{Binding Path=HistoricPeakWind, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=SummerTemperature, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=SnowLoadingArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=ClimateZoneCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=FireIndexArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=FireIndexControlArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>

                            <TextBlock Text="{Binding Path=HighFireThreatDistrict, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=SurgeProtectionDistricts, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=PrimaryVoltageArea, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            <TextBlock Text="{Binding Path=InsulationAreas, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="8 0 4 0" Opacity="1"/>
                            
                            </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical" x:Name="sd">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="CloseWindowCmd" Click="CloseWindowCmd_Click" Content="Close" Width="70" Margin="40 4 20 4"/>
                    <Button x:Name="CopyWindowCmd" Click="CopyWindowCmd_Click"  Content="Copy" Width="70" Margin="40 4 20 4"/>
                    <Button x:Name="PrintWindowCmd" Click="PrintWindowCmd_Click" Content="Print" Width="70" Margin="40 4 40 4"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
